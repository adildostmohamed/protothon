<% include partials/search-overlay %>
<div class="page-wrapper js-page-wrapper">
  <main role="main">
    <% include partials/page-alert.ejs %>
    <% include partials/site-header %>
    <section class="hero">
      <div class="hero-feature container">
        <h1 class="hero-feature__title">Hello, we're <span class="hero-feature__title--thick">UK Power Networks</span></h1>
        <p class="hero-feature__description">We own and maintain electricity cables and lines to make sure your lights stay on</p>
        <a class="hero-feature__link" href="#">Discover more</a>
      </div>
      <div class="hero__search-wrapper">
        <div class="container">
          <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
              <div class="hero__search-label-wrapper">
                <label class="hero__search-label js-hero__search-trigger" for="hero-search-input">How can we help you today?</label>
                <i class="fa fa-chevron-right hero__search-icon" aria-hidden="true"></i>
              </div>
              <input id="hero-search-input" type="text" name="search" class="hero__search-input js-hero__search-trigger" />
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="map-wrapper js-map-wrapper container">
      <h2 class="map__title">Known <span class="map__title--thick">incidents</span></h2>
      <div class="map-expand__wrapper">
        <button class="map-expand__btn js-expand__icon"><i class="fa fa-arrows-alt map-expand__icon"></i><span class="text--hidden">Expand map</span></button>
      </div>
      <div id="map" class="map js-map"></div>
    </section>
    <section class="info">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-8 info-what">
            <h2 class="info-what__heading">What <span class="info-what__heading--thick">we do...</span></h2>
            <p class="info-what__description">We own and maintain electricity cables and lines across London, the South East and East of England making sure your lights stay on.  We maintain and upgrade power equipment. We move and connect new electricity cables.<br /><br />Your electricity supplier is the company you choose to buy your electricity from, and who you pay your bills to. If you look on your bill - part of what you pay is given to UK Power Networks for running and maintaining the power cables in your area.</p>
          </div>
          <div class="col-sm-4 info-report">
            <h2 class="info-report__heading"><span class="info-report__heading--thick">Report</span> an issue</h2>
            <p class="info-report__description">Report a power cut or another power issue and weâ€™ll sort it out for you.</p>
            <button class="info-report__btn">Report a fault</button>
          </div>
        </div>
      </div>
    </section>
    <section class="services">
      <div class="container">
        <div class="row">
          <div class="col-sm-4 services-wrapper">
            <article class="services-card">
              <a href="#" class="services-card__link">
                <div class="row">
                  <div class="col-xs-8">
                    <h3 class="services-card__title">Help with electricity <span class="services-card__title--thick">inside your home</span></h3>
                  </div>
                  <div class="col-xs-4">
                    <i class="fa fa-chevron-right services-card__icon" aria-hidden="true"></i>
                  </div>
                </div>
              </a>
            </article>
          </div>
          <div class="col-sm-4 services-wrapper">
            <article class="services-card">
              <a href="#" class="services-card__link">
                <div class="row">
                  <div class="col-xs-8">
                    <h3 class="services-card__title">Help with electricity <span class="services-card__title--thick">outside your home</span></h3>
                  </div>
                  <div class="col-xs-4">
                    <i class="fa fa-chevron-right services-card__icon" aria-hidden="true"></i>
                  </div>
                </div>
              </a>
            </article>
          </div>
          <div class="col-sm-4 services-wrapper">
            <article class="services-card">
              <a href="#" class="services-card__link">
                <div class="row">
                  <div class="col-xs-8">
                    <h3 class="services-card__title">Help with electricity <span class="services-card__title--thick">on your street</span></h3>
                  </div>
                  <div class="col-xs-4">
                    <i class="fa fa-chevron-right services-card__icon" aria-hidden="true"></i>
                  </div>
                </div>
              </a>
            </article>
          </div>
        </div>
      </div>
    </section>
    <section class="updates">
      <div class="container">
        <div class="row">
          <div class="col-sm-4 updates-phone">
            <img class="updates-phone__img" src="/images/text-update.png" alt="image of a phone with text" />
          </div>
          <div class="col-sm-5">
            <h2 class="updates__title">Power cuts <span class="js-updates-location">near you</span></h2>
            <p class="updates__description">Get SMS updates so you're not left in the dark</p>
            <form id="signUpForm" class="form" action="/confirmation">
              <fieldset>
                <legend class="text--hidden">Your details</legend>
                <div class="updates-postcode">
                  <label for="address" class="form__label">Postcode</label>
                  <input id="updates-address-input" type="text" class="form__input updates-postcode__input" placeholder="Postcode"/>
                </div>
                <div class="updates-number">
                  <label class="form__label" for="telephone">Mobile number</label>
                  <input class="form__input" id="telephone" type="tel" placeholder="Mobile number"/>
                </div>
                <button class="updates__btn" type="submit">Sign up now</button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </section>
    <section class="social">
      <div class="container">
        <h2 class="social__title">Find out more on our <span class="social__title--thick">social media channels</span></h2>
        <div class="row">
          <div class="col-sm-6 col-md-8">
            <div class="social-tweet__wrapper">
              <p class="social-tweet__text">How do we fix an underground electricity cable fault? Watch our video to find out: <strong>http://bit.ly/q42F3</strong></p>
            </div>
          </div>
          <div class="col-sm-6 col-md-4">
            <div class="row social-channel-row--first">
              <div class="col-xs-6">
